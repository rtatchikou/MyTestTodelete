package com.lyncwork.services.dropbox.service.mapper;


import org.mapstruct.Mapper;
import org.mapstruct.Mapping;

import com.lyncwork.services.hellosign.domain.File;
import com.lyncwork.services.hellosign.service.dto.FileDTO;

;

/**
 * Mapper for the entity {@link File} and its DTO {@link FileDTO}.
 */
@Mapper(componentModel = "spring", uses={
        UserMapper.class
})
public interface FileMapper extends EntityMapper<FileDTO, File> {

    @Override
    @Mapping(source = "fileName", target = "fileName")
    @Mapping(source = "filePath", target = "filePath")
    @Mapping(source = "dropboxFileId", target = "dropboxFileId")
    @Mapping(source = "externalGroupId", target = "externalGroupId")
    @Mapping(source = "fileOwner", target = "fileOwner")
    @Mapping(source = "sharers", target = "sharers" ,ignore = true)
    FileDTO toDto(File entity);


    @Override
    @Mapping(source = "fileName", target = "fileName")
    @Mapping(source = "filePath", target = "filePath")
    @Mapping(source = "dropboxFileId", target = "dropboxFileId")
    @Mapping(source = "externalGroupId", target = "externalGroupId")
    @Mapping(source = "fileOwner", target = "fileOwner")
    @Mapping(source = "sharers", target = "sharers",ignore = true)
    File toEntity(FileDTO dto);
}
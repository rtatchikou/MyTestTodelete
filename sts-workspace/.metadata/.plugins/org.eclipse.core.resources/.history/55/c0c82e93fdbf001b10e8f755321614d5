	/*
	@PutMapping("/address")
	public ResponseEntity<Address> updateAddress(@RequestBody Address address) {

		
	}*/
	
	
	/*
	@DeleteMapping("/address/id")
	public ResponseEntity<Address> deleteAddress(@PathVariable(value = "id") Integer id) {
		
	}*/
	
	
	

}

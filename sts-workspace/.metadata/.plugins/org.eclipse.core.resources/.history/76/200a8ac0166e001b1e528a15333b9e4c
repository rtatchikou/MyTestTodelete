package com.lyncwork.services.hellosign.client.hellosign.service.impl;

import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Component;

import com.lyncwork.services.hellosign.client.dropbox.client.teamfolder.ContentClientFeign;
import com.lyncwork.services.hellosign.client.dropbox.client.teamfolder.FilesClientFeign;
import com.lyncwork.services.hellosign.client.dropbox.client.teamfolder.SharingClientFeign;
import com.lyncwork.services.hellosign.client.dropbox.client.teamfolder.TeamFolderClientFeign;
import com.lyncwork.services.hellosign.client.dropbox.model.request.teamfolder.create.AddFolderMemberRequest;
import com.lyncwork.services.hellosign.client.dropbox.model.request.teamfolder.create.CreateTeamFolderRequest;
import com.lyncwork.services.hellosign.client.dropbox.model.request.teamfolder.create.SetAccessInheritenceRequest;
import com.lyncwork.services.hellosign.client.dropbox.model.request.teamfolder.info.GetInfoTeamFolderRequest;
import com.lyncwork.services.hellosign.client.dropbox.model.request.teamfolder.list.ListTeamFolderRequest;
import com.lyncwork.services.hellosign.client.dropbox.model.response.teamfolder.info.InfoTeamFolder;
import com.lyncwork.services.hellosign.client.dropbox.service.TeamFolderService;

import java.util.List;
import java.util.Map;


@Component
public class TeamFolderServiceImpl implements TeamFolderService {
	private static final Logger log = LoggerFactory.getLogger(TeamFolderServiceImpl.class);
	@Autowired
	private TeamFolderClientFeign teamFolderClientFeign;
	
	@Autowired
	private FilesClientFeign filesClientFeign;
	
	@Autowired
	private SharingClientFeign sharingClientFeign;
	
	@Autowired
	private ContentClientFeign contentClientFeign;
	
	@Override
	public void getList(ListTeamFolderRequest request) {
		InfoTeamFolder response = teamFolderClientFeign.getList(request);
		log.info("List of team folder : {}", response);
	}

	@Override
	public void getInfo(GetInfoTeamFolderRequest request) {
		List<InfoTeamFolder> infoTeamFolders = teamFolderClientFeign.getInfo(request);
		log.info("Get info team folders : {}", infoTeamFolders);
	}

	@Override
	public void createTeamFolder(CreateTeamFolderRequest request, Map<String, ?> headers) {

		log.info("Before creating:: {} headers:: {}",request ,headers);
		filesClientFeign.createTeamFolder(request, headers);
		log.info("team folder created!");
	}

	@Override
	public void setAccessInheritence(SetAccessInheritenceRequest request, Map<String, String> headers) {
		sharingClientFeign.setAccessInheritence(request, headers);
		log.info("Sharing folder access inheritence has been set!");
	}

	@Override
	public void addFolderMember(AddFolderMemberRequest request, Map<String, String> headers) {
		sharingClientFeign.addFolderMember(request, headers);
		log.info("Member has been added to folder");
	}


}

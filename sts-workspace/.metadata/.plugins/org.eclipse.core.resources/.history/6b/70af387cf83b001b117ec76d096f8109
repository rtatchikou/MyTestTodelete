package com.lyncwork.services.gusto.client.store.client;


import com.lyncwork.services.gusto.client.store.Response.SubscriptionAppResponse;
import com.lyncwork.services.gusto.client.store.config.StoreConfig;
import com.lyncwork.services.gusto.client.store.hystrix.SubscriptionAppClientFallback;
import org.springframework.cloud.openfeign.FeignClient;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;

@FeignClient(value = "subscriptionAppClient",
    url = "${lyncworks.store.basePath}",
    configuration = StoreConfig.class,
    fallback = SubscriptionAppClientFallback.class
)
public interface SubscriptionAppClient {

        @RequestMapping(method = RequestMethod.GET, value = "/api/applications/{identifier}/subscription-apps/")
        SubscriptionAppResponse getApplicationProperties(@PathVariable("identifier") String identifier);

    @RequestMapping(method = RequestMethod.PUT, value = "/api/subscription-apps/")
    SubscriptionAppResponse postApplicationProperties(SubscriptionAppResponse subscriptionAppResponse);
    }


package com.lyncwork.services.gusto.client.gusto.payload;

import org.json.JSONException;
import org.json.JSONObject;
import org.springframework.cloud.cloudfoundry.com.fasterxml.jackson.annotation.JsonProperty;

public class Termination {
    @JsonProperty("effective_date")
    String effectiveDate;

    @JsonProperty("run_termination_payroll")
    Boolean runTerminationPayroll;

    public Termination() {
    }

    public Termination(String effectiveDate, Boolean runTerminationPayroll) {
        this.effectiveDate = effectiveDate;
        this.runTerminationPayroll = runTerminationPayroll;
    }

    public String getEffectiveDate() {
        return effectiveDate;
    }

    public void setEffectiveDate(String effectiveDate) {
        this.effectiveDate = effectiveDate;
    }

    public Boolean getRunTerminationPayroll() {
        return runTerminationPayroll;
    }

    public void setRunTerminationPayroll(Boolean runTerminationPayroll) {
        this.runTerminationPayroll = runTerminationPayroll;
    }

    public String toJsonString() {
        String result = null;
        try {
            JSONObject json = new JSONObject();
            json.put("effective_date", this.effectiveDate);
            json.put("run_termination_payroll", this.runTerminationPayroll);
            result = json.toString();
        } catch (JSONException e) { }
        return result;
    }

}

package com.lyncwork.services.dropbox.domain;

import org.hibernate.annotations.Cache;
import org.hibernate.annotations.CacheConcurrencyStrategy;

import javax.persistence.*;
import javax.validation.constraints.NotBlank;
import java.io.Serializable;
import java.util.HashSet;
import java.util.Set;

/**
 * A Company.
 */
@Entity
@Table(name = "file")
@Cache(usage = CacheConcurrencyStrategy.NONSTRICT_READ_WRITE)
public class File implements Serializable {

    private static final long serialVersionUID = 1L;

    @Id
    @GeneratedValue(strategy = GenerationType.IDENTITY)
    private Long id;

    @NotBlank
    @Column(name = "file_name")
    private String fileName;

    @NotBlank
    @Column(name = "file_path")
    private String filePath;

    @NotBlank
    @Column(name = "dropbox_file_id")
    private String dropboxFileId;

    @Column(name = "external_group_id")
    private String externalGroupId;

    @ManyToOne
    @JoinColumn(name = "user_id")
    private User fileOwner;

    @ManyToMany(fetch = FetchType.LAZY)
    @JoinTable(name = "file_users",
            joinColumns = {@JoinColumn(name = "file_id", referencedColumnName = "id")},
            inverseJoinColumns = {@JoinColumn(name = "user_id", referencedColumnName = "id")})
    //@Cascade({org.hibernate.annotations.CascadeType.SAVE_UPDATE})
   // @Cache(usage = CacheConcurrencyStrategy.NONSTRICT_READ_WRITE)
    Set<User> sharers = new HashSet<>();

    public Long getId() {
        return id;
    }

    public void setId(Long id) {
        this.id = id;
    }

    public String getFileName() {
        return fileName;
    }

    public void setFileName(String fileName) {
        this.fileName = fileName;
    }

    public String getFilePath() {
        return filePath;
    }

    public void setFilePath(String filePath) {
        this.filePath = filePath;
    }

    public String getDropboxFileId() {
        return dropboxFileId;
    }

    public void setDropboxFileId(String dropboxFileId) {
        this.dropboxFileId = dropboxFileId;
    }

    public String getExternalGroupId() {
        return externalGroupId;
    }

    public void setExternalGroupId(String externalGroupId) {
        this.externalGroupId = externalGroupId;
    }

    public User getFileOwner() {
        return fileOwner;
    }

    public void setFileOwner(User fileOwner) {
        this.fileOwner = fileOwner;
    }

    public Set<User> getSharers() {
        return sharers;
    }

    public void setSharers(Set<User> sharers) {
        this.sharers = sharers;
    }

    @Override
    public String toString() {
        return "File{" +
                "id=" + id +
                ", fileName='" + fileName + '\'' +
                ", filePath='" + filePath + '\'' +
                ", dropboxFileId='" + dropboxFileId + '\'' +
                ", externalGroupId='" + externalGroupId + '\'' +
                ", fileOwner=" + fileOwner +
                ", sharers=" + sharers +
                '}';
    }
}

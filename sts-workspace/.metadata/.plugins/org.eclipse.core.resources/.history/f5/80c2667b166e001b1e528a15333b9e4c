package com.lyncwork.services.hellosign.client.dropbox.service.impl;


import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Component;

import com.lyncwork.services.hellosign.client.dropbox.client.group.GroupClientFeign;
import com.lyncwork.services.hellosign.client.dropbox.model.request.group.add.AddGroupMemberRequest;
import com.lyncwork.services.hellosign.client.dropbox.model.request.group.add.CreateGroupRequest;
import com.lyncwork.services.hellosign.client.dropbox.model.request.group.list.GroupListRequest;
import com.lyncwork.services.hellosign.client.dropbox.model.response.group.add.CreateGroupResponse;
import com.lyncwork.services.hellosign.client.dropbox.model.response.group.list.GroupListResponse;
import com.lyncwork.services.hellosign.client.dropbox.service.GroupService;


@Component
public class GroupServiceImpl implements GroupService {
	private static final Logger log = LoggerFactory.getLogger(AuthTokenServiceImpl.class);

	@Autowired
	private GroupClientFeign groupClientFeign;
	
	@Override
	public GroupListResponse getGroups(GroupListRequest request) {
		GroupListResponse response = groupClientFeign.getMembers(request);
		log.info("Group list {}", response);
		return response;
	}

	@Override
	public CreateGroupResponse createGroup(CreateGroupRequest request) {
		CreateGroupResponse response = groupClientFeign.createGroup(request);
		log.info("Created group {}", response);
		return response;
	}

	@Override
	public void addGroupMembers(AddGroupMemberRequest addGroupMemberRequest) {
		groupClientFeign.addGroupMembers(addGroupMemberRequest);
		log.info("member added to group");
	}

}

package com.lyncwork.services.gusto.service.dto;

import com.lyncwork.services.gusto.client.gusto.payload.LyncWorkUser;
import com.lyncwork.services.gusto.domain.UserIntegrationAction;
import com.lyncwork.services.gusto.domain.UserIntegrationMessage;
import com.lyncwork.services.gusto.domain.UserIntegrationStatus;
import org.slf4j.Logger;
import org.slf4j.LoggerFactory;

import java.io.Serializable;
import java.util.List;

/**
 * A DTO for the {@link UserIntegrationMessage} entity.
 */
public class UserIntegrationMessageDTO implements Serializable {

    private static final long serialVersionUID = 1L;

    private Long id;

    private String publisher;

    private MessageDTO message;

    private UserIntegrationAction action;

    private UserIntegrationStatus status;

    @Override
    public boolean equals(Object o) {
        if (this == o) {
            return true;
        }
        if (!(o instanceof UserIntegrationMessageDTO)) {
            return false;
        }
        return id != null && id.equals(((UserIntegrationMessageDTO) o).id);
    }

    public Long getId() {
        return id;
    }

    public void setId(Long id) {
        this.id = id;
    }

    public String getPublisher() {
        return publisher;
    }

    public void setPublisher(String publisher) {
        this.publisher = publisher;
    }

    public MessageDTO getMessage() {
        return message;
    }

    public void setMessage(MessageDTO message) {
        this.message = message;
    }

    public UserIntegrationAction getAction() {
        return action;
    }

    public void setAction(UserIntegrationAction action) {
        this.action = action;
    }

    public UserIntegrationStatus getStatus() {
        return status;
    }

    public void setStatus(UserIntegrationStatus status) {
        this.status = status;
    }

    @Override
    public int hashCode() {
        return 31;
    }

    @Override
    public String toString() {
        return "UserIntegrationMessage{" +
            "id=" + getId() +
            ", publisher='" + getPublisher() + "'" +
            ", action='" + getAction() + "'" +
            ", message='" + getMessage() + "'" +
            ", status='" + getStatus() + "'" +
            "}";
    }

    public static class MessageDTO {
        private final Logger logger = LoggerFactory.getLogger(MessageDTO.class);
        private LyncWorkUser lyncWorkUser;

        public LyncWorkUser getLyncWorkUser() {
            return lyncWorkUser;
        }

        public void setLyncWorkUser(LyncWorkUser lyncWorkUser) {
            this.lyncWorkUser = lyncWorkUser;
        }
    }
}

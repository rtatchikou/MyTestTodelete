apiVersion: apps/v1
kind: Deployment
metadata:
  name: dropbox
  namespace: development
spec:
  replicas: 1
  selector:
    matchLabels:
      app: dropbox
      version: 'v1'
  template:
    metadata:
      labels:
        app: dropbox
        version: 'v1'
    spec:
      initContainers:
        - name: init-ds
          image: busybox:latest
          command:
            - '/bin/sh'
            - '-c'
            - |
              while true
              do
                rt=$(nc -z -w 1 lwdev.c3mxfuuzmquw.us-east-1.rds.amazonaws.com 3306)
                if [ $? -eq 0 ]; then
                  echo "DB is UP"
                  break
                fi
                echo "DB is not yet reachable;sleep for 10s before retry"
                sleep 10
              done
      containers:
        - name: dropbox-app
          image: 387856044462.dkr.ecr.us-east-1.amazonaws.com/dropbox:dev
          imagePullPolicy: Always
          env:
            - name: SPRING_PROFILES_ACTIVE
              value: dev
            - name: FRONTDOOR_LOADBALANCER_HOST
              value: a05c96e66bfb811eab6ea0a10260df48-87045555.api.us-east-1.elb.amazonaws.com
            - name: SPRING_CLOUD_CONFIG_URI
              value: http://admin:${jhipster.registry.password}@jhipster-registry.development.svc.cluster.local:8761/config
            - name: JHIPSTER_REGISTRY_PASSWORD
              valueFrom:
                secretKeyRef:
                  name: registry-secret
                  key: registry-admin-password
            - name: EUREKA_CLIENT_SERVICE_URL_DEFAULTZONE
              value: http://admin:${jhipster.registry.password}@jhipster-registry.development.svc.cluster.local:8761/eureka/
            - name: SPRING_DATASOURCE_URL
              value: jdbc:mariadb://lwdev.c3mxfuuzmquw.us-east-1.rds.amazonaws.com:3306/public

            - name: SPRING_DATASOURCE_USER
              valueFrom:
                secretKeyRef:
                  name: dropbox-mysql
                  key: user
            - name: SPRING_DATASOURCE_PASSWORD
              valueFrom:
                secretKeyRef:
                  name: dropbox-mysql
                  key: password
            - name: SPRING_SLEUTH_PROPAGATION_KEYS
              value: 'x-request-id,x-ot-span-context'
            - name: JAVA_OPTS
              value: ' -Xmx256m -Xms256m'
            - name: DOMAIN
              value: lync.work
            - name: FRONTEND_APP_URL
              value: https://public.lync.work
            - name: FRONTDOOR_BASEPATH
              value: https://api.lync.work
            - name: STORE_BASEPATH
              value: https://api.lync.work/services/store
          resources:
            requests:
              memory: '128Mi'
              cpu: '100m'
            limits:
              memory: '1Gi'
              cpu: '1'
          ports:
            - name: http
              containerPort: 8091
          readinessProbe:
            httpGet:
              path: /management/health
              port: http
            initialDelaySeconds: 60
            periodSeconds: 15
            failureThreshold: 6
          livenessProbe:
            httpGet:
              path: /management/info
              port: http
            initialDelaySeconds: 240

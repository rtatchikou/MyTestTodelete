package com.lyncwork.services.hellosign.client.dropbox.client.teamfolder;

import org.springframework.cloud.openfeign.FeignClient;
import org.springframework.http.MediaType;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;

import com.lyncwork.services.hellosign.client.dropbox.config.RequestDropboxAPIConfig;
import com.lyncwork.services.hellosign.client.dropbox.model.request.teamfolder.info.GetInfoTeamFolderRequest;
import com.lyncwork.services.hellosign.client.dropbox.model.request.teamfolder.list.ListTeamFolderRequest;
import com.lyncwork.services.hellosign.client.dropbox.model.response.teamfolder.info.InfoTeamFolder;
import com.lyncwork.services.hellosign.client.dropbox.model.response.teamfolder.list.GetNamespcesResponse;

import java.util.List;



@FeignClient(url = "${dropbox.api.url}", value = "team-folder", configuration = RequestDropboxAPIConfig.class)
public interface TeamFolderClientFeign {

	@PostMapping(path = "/team/team_folder/list", consumes = MediaType.APPLICATION_JSON_VALUE, produces = MediaType.APPLICATION_JSON_VALUE )
	InfoTeamFolder getList(@RequestBody ListTeamFolderRequest request);

	@PostMapping(path = "/team/team_folder/get_info", consumes = MediaType.APPLICATION_JSON_VALUE, produces = MediaType.APPLICATION_JSON_VALUE )
	List<InfoTeamFolder> getInfo(@RequestBody GetInfoTeamFolderRequest request);

	@PostMapping(path = "/team/namespaces/list", consumes = MediaType.APPLICATION_JSON_VALUE, produces = MediaType.APPLICATION_JSON_VALUE )
	GetNamespcesResponse getNamespaces(@RequestBody String emptyJson);

}

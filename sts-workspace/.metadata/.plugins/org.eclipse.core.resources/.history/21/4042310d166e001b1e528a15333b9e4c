package com.lyncwork.services.dropbox.client.dropbox.client.group;

import com.lyncwork.services.dropbox.client.dropbox.config.RequestDropboxAPIConfig;
import com.lyncwork.services.dropbox.client.dropbox.model.request.group.add.AddGroupMemberRequest;
import com.lyncwork.services.dropbox.client.dropbox.model.request.group.add.CreateGroupRequest;
import com.lyncwork.services.dropbox.client.dropbox.model.request.group.list.GroupListRequest;
import com.lyncwork.services.dropbox.client.dropbox.model.response.group.add.CreateGroupResponse;
import com.lyncwork.services.dropbox.client.dropbox.model.response.group.list.GroupListResponse;
import org.springframework.cloud.openfeign.FeignClient;
import org.springframework.http.MediaType;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;



@FeignClient(url = "${dropbox.api.url}", value = "groups", configuration = RequestDropboxAPIConfig.class)
public interface GroupClientFeign {

	@PostMapping(path = "/team/groups/list", consumes = MediaType.APPLICATION_JSON_VALUE, produces = MediaType.APPLICATION_JSON_VALUE )
	GroupListResponse getMembers(@RequestBody GroupListRequest request);

	@PostMapping(path = "/team/groups/create", consumes = MediaType.APPLICATION_JSON_VALUE, produces = MediaType.APPLICATION_JSON_VALUE )
	CreateGroupResponse createGroup(@RequestBody CreateGroupRequest request);

	@PostMapping(path = "/team/groups/members/add", consumes = MediaType.APPLICATION_JSON_VALUE, produces = MediaType.APPLICATION_JSON_VALUE )
	void addGroupMembers(AddGroupMemberRequest addGroupMemberRequest);

}

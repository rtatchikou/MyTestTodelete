package com.lyncwork.services.dropbox.client.store.client;


import com.lyncwork.clients.store.model.LyncWorkUserDTO;
import com.lyncwork.services.hellosign.client.store.config.StoreConfig;
import com.lyncwork.services.hellosign.client.store.hystrix.LyncWorkUserClientFallback;

import org.springframework.cloud.openfeign.FeignClient;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;

@FeignClient(value = "lyncWorkUserClient",
    url = "${lyncworks.store.basePath}",
    configuration = StoreConfig.class,
    fallback = LyncWorkUserClientFallback.class
)
public interface LyncWorkUserClient {

    @RequestMapping(method = RequestMethod.GET, value = "/api/lync-work-users/{id-or-username}")
    LyncWorkUserDTO getLyncWorkUser(@PathVariable("id-or-username") String identifier);
}


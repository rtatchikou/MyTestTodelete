package com.lyncwork.services.expensify.client.expensify.service.Processor;

import com.lyncwork.services.expensify.client.expensify.client.ExpensifyClient;
import com.lyncwork.services.expensify.client.expensify.interceptor.GustoClientInterceptor;
import com.lyncwork.services.expensify.client.expensify.payload.Employee;
import com.lyncwork.services.expensify.client.expensify.payload.LyncWorkUser;
import com.lyncwork.services.expensify.client.expensify.payload.Termination;
import com.lyncwork.services.expensify.client.expensify.service.ExpensifyService;
import com.lyncwork.services.expensify.client.store.client.SubscriptionAppClient;
import com.lyncwork.services.expensify.processors.Processor;
import com.lyncwork.services.expensify.service.IntgrationService.UserIntegrationQueueService;
import com.lyncwork.services.expensify.service.mapper.UserIntegrationMessageMapper;

import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Component;

import java.time.LocalDate;
import java.util.*;

@Component
public class ExpensifyProcessor extends Processor {

    private static final Logger logger = LoggerFactory.getLogger(ExpensifyProcessor.class);
    @Autowired
    ExpensifyService gustoService;
    @Autowired
    SubscriptionAppClient subscriptionAppClient;
    @Autowired
    ExpensifyClient gustoClient;
    @Autowired
    UserIntegrationQueueService userIntegrationQueueService;
    @Autowired
    ExpensifyClientInterceptor interceptor;

    @Override
    public <T> T provisionUser(LyncWorkUser lyncWorkUser) {
        String lyncWorkUserString = UserIntegrationMessageMapper.lyncWorkUserToString(lyncWorkUser);
        System.out.println(lyncWorkUser);
        ExpensifyService.ExpensifyParameters expensifyParameters = expensifyService.getExpensifyParameters();
        interceptor.setAccessToken(expensifyParameters.getAccessToken());
        Map<String, Object> responseCode = expensifyClient.provisionUser(expensifyParameters.getCompanyId(), lyncWorkUserString);
        return null;
    }


    @Override
    public void deprovisionUser(LyncWorkUser lyncWorkUser) {
        ExpensifyService.ExpensifyParameters expensifyParameters = gustoService.getExpensifyParameters();
        interceptor.setAccessToken(expensifyParameters.getAccessToken());
        List<Employee> employees = expensifyClient.getAllEmployees(expensifyParameters.getCompanyId());
        Employee emp = new Employee();
        if (employees != null) {
            employees.stream().filter(employee -> employee.getEmail() != null && employee.getEmail().equalsIgnoreCase(lyncWorkUser.getEmailPrimary())).findFirst().ifPresent(
                employee -> emp.setId(employee.getId()));
            //interceptor.setAccessToken(expensifyParameters.getAccessToken());
            Termination termination = expensifyClient.setTermination(emp.getId(), new Termination(LocalDate.now().toString(), Boolean.TRUE).toJsonString());
        }
    }

    @Override
    public String getApplicationName() {
        return "Expensify";
    }

    @Override
    public UserIntegrationQueueService getUserIntegrationQueueService() {
        return userIntegrationQueueService;
    }


}

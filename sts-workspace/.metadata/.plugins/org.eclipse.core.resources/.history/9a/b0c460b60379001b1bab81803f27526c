package com.efunzo.efunzouber;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.boot.CommandLineRunner;
import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;

import com.efunzo.efunzouber.model.response.DataPopulator;

@SpringBootApplication
public class EfunzoUberApplication implements CommandLineRunner {

	
	@Autowired
	private DataPopulator dataPopulator;
	
	
	public static void main(String[] args) {
		SpringApplication.run(EfunzoUberApplication.class, args);
	}

	@Override
	public void run(String... args) throws Exception {
	   
		for (int i = 0; i < 35; i++) {
			
			dataPopulator.getCreatedRide();
			
			Thread.currentThread().sleep(50000);
		}
		
		
	}

}

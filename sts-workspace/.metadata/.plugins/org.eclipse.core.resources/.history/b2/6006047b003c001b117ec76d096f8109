apiVersion: apps/v1
kind: Deployment
metadata:
  name: gusto
  namespace: default
spec:
  replicas: 1
  selector:
    matchLabels:
      app: gusto
      version: 'v1'
  template:
    metadata:
      labels:
        app: gusto
        version: 'v1'
    spec:
      initContainers:
        - name: init-ds
          image: busybox:latest
          command:
            - '/bin/sh'
            - '-c'
            - |
              while true
              do
                rt=$(nc -z -w 1 lwprod.c3mxfuuzmquw.us-east-1.rds.amazonaws.com 3306)
                if [ $? -eq 0 ]; then
                  echo "DB is UP"
                  break
                fi
                echo "DB is not yet reachable;sleep for 10s before retry"
                sleep 10
              done
      containers:
        - name: gusto-app
          image: 387856044462.dkr.ecr.us-east-1.amazonaws.com/gusto:prod
          imagePullPolicy: Always
          env:
            - name: SPRING_PROFILES_ACTIVE
              value: prod
            - name: FRONTDOOR_LOADBALANCER_HOST
              value: a657c25fcc00611eab6ea0a10260df48-189389323.us-east-1.elb.amazonaws.com
            - name: SPRING_CLOUD_CONFIG_URI
              value: http://admin:${jhipster.registry.password}@jhipster-registry.default.svc.cluster.local:8761/config
            - name: JHIPSTER_REGISTRY_PASSWORD
              valueFrom:
                secretKeyRef:
                  name: registry-secret
                  key: registry-admin-password
            - name: EUREKA_CLIENT_SERVICE_URL_DEFAULTZONE
              value: http://admin:${jhipster.registry.password}@jhipster-registry.default.svc.cluster.local:8761/eureka/
            - name: SPRING_DATASOURCE_URL
              #value: jdbc:mariadb://store-mariadb.default.svc.cluster.local:3306/store
              value: jdbc:mariadb://lwprod.c3mxfuuzmquw.us-east-1.rds.amazonaws.com:3306/store
            - name: SPRING_DATASOURCE_USER
              valueFrom:
                secretKeyRef:
                  name: gusto-mysql
                  key: user
            - name: SPRING_DATASOURCE_PASSWORD
              valueFrom:
                secretKeyRef:
                  name: gusto-mysql
                  key: password
            - name: SPRING_SLEUTH_PROPAGATION_KEYS
              value: 'x-request-id,x-ot-span-context'
            - name: JAVA_OPTS
              value: ' -Xmx256m -Xms256m'
            - name: DOMAIN
              value: lyncwork.com
            - name: FRONTEND_APP_URL
              value: https://public.lyncwork.com
            - name: FRONTDOOR_BASEPATH
              value: https://api.lyncwork.com
            - name: STORE_BASEPATH
              value: https://api.lyncwork.com/services/store
          resources:
            requests:
              memory: '512Mi'
              cpu: '500m'

	public User addUser(User user) {
		
		return userRepository.save(user);
	}

	public User findById(Integer id) {
		Optional<User> optionalUser = userRepository.findById(id);
		
		if(optionalUser.isPresent()) {
			
			return optionalUser.get();
		}
		
		return null;
	}

